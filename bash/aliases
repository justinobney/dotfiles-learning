# Helpers
alias peek="tree -L 2"
alias glance="tree -L 1"
alias o="open . &"
alias l="ls -lah"
alias dev="cd ~/dev/"
alias home="cd ~/"

function take {
  mkdir $1
  cd $1
}

function peekat {
  peek $1
}

# Processes
alias tu="top -o cpu"
alias tm="top -o vsize"

# Git
alias g="git status"

# Config
alias config="subl ~/bin/dotfiles/"
